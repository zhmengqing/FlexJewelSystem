<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx" width="160" height="60">
    <s:BorderContainer  width="100%" height="100%">
        <s:VGroup width="100%" height="100%" horizontalAlign="center" top="5" bottom="5" left="5" right="5">
            <s:Label text="{Label}" fontFamily="Lato" fontSize="20"/>
            <s:Label text="{Desc}" fontFamily="Lato"/>
        </s:VGroup>
    </s:BorderContainer>
    
    <fx:Script>
        <![CDATA[
            [Bindable]
            public var Label:String;
            [Bindable]
            public var Desc:String;
        ]]>
    </fx:Script>
</s:Group>
